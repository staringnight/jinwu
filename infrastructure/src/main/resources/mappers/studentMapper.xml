<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazhi100.student.infrastructure.test.mapper.StudentMapper">
    <resultMap id="BaseResultMap" type="com.dazhi100.student.infrastructure.model.StudentEntity">
        <!--@mbg.generated-->
        <!--@Table student-->
        <constructor>
            <idArg column="id" jdbcType="BIGINT"   name="id"/>
            <arg column="name" jdbcType="VARCHAR" name="name"/>
        </constructor>
    </resultMap>
    <insert id="saveStudent">
        insert into student(id, name)
        values (#{info.id}, #{info.name})
    </insert>

    <select id="getStudentEntity"  resultMap="BaseResultMap">
        select id, name
        from student
        where id = #{studentId}
    </select>
</mapper>